<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>GetItineraries</servlet-name>
        <servlet-class>cat.udl.eps.softarch.webglossary.servlets.GetAlertsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListItineraries</servlet-name>
        <servlet-class>cat.udl.eps.softarch.webglossary.servlets.ListAlertsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Itineraries</servlet-name>
        <servlet-class>cat.udl.eps.softarch.webglossary.servlets.ItinerariesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetItineraries</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListItineraries</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Itineraries</servlet-name>
        <url-pattern>/itineraries*</url-pattern>
        <url-pattern>/itineraries</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
